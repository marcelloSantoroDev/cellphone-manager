{
    "version": 2,
    "builds": [
        {
            "src": "server/**",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/user/(.*)", 
            "dest": "server/$1"
        },
        {
            "src": "/login/(.*)", 
            "dest": "server/$1"
        },
        {
            "src": "/auth/(.*)", 
            "dest": "server/$1"
        },
        {
            "src": "/products/(.*)", 
            "dest": "server/$1"
        },
        {
            "src": "/(.*)", 
            "dest": "client/$1"
        }
    ]
}